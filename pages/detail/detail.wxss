/*内容视图*/
.main-wrap{
  width:100%;
  margin-top: 10rpx;
  height:auto;
}
.main-title{
    line-height: 60rpx;
    background-color: #fff;
    border-bottom: 1px solid #eee;
    color: #999;
    font-size: 14px;
    padding-left: .4rem;
}
.main-title image{
  display:block;
  float:left;
  width:30rpx;
  height:30rpx;
  margin:6px 10rpx 0 0;
}
.shop-list{
  width:100%;
  position: relative;
  height:180rpx;
  padding:30rpx 20rpx;
  box-sizing: border-box;
  background:#fff;
}
.shop-img{
  float:left;
  width:120rpx;
  height:120rpx;
  overflow:hidden;
}
.shop-img image{
  width:100%;
  height:100%;
}
.shop-right{
  float:right;
  width:570rpx;
  height:120rpx;
  overflow:hidden;
  box-sizing: border-box;
}
.now-title{
  font-size: 16px;
  line-height: 22px;
}
.evaluate{
  font-size: 14px;
  color:#666;
  line-height: 20px;
}
.describe{
  font-size: 14px;
  color:#666;
  line-height: 20px;
}